{% extends 'base.html.twig' %}

{% block content %}

    <div class="container">
        <div>Votre panier</div>

        {% if items | length > 0 %}
            {% for item in items %}
                {{ dump(item.product) }}
                <div class="d-flex flex-wrap py-3 my-3 border border-dark">
                    <div class="col-md-2">
                        <img height="auto" width="100%" src="{{ item.product.image }}">
                    </div>
                    <div class="col-md-6">
                        <div>
                            <strong>{{ item.product.name }}</strong>
                        </div>
                        <div class="d-flex">
                            <div>Ref : {{ item.product.sku }} - Couleur :&nbsp</div>
                            <div class="multiColor" style="color:#{{ item.product.color }}"
                                 data-color="#{{ item.product.color }}">{{ item.product.color }}</div>
                        </div>
                        <a class="btn btn-md btn-noir text-white my-3">Personnaliser ce produit</a>
                    </div>
                    <div class="col">
                        <div>{{ item.product.price |number_format(2, '.', ',') }} €</div>
                    </div>
                    <div class="col">
                        <input value="{{ item.product.quantity }}" size="4"/>
                    </div>
                    <a href="{{ path('cart_delete', {'id':item.product.id,'color':item.product.color}) }}"
                       class="btn lienDark">
                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-trash-fill icon-size"
                             fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd"
                                  d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5a.5.5 0 0 0-1 0v7a.5.5 0 0 0 1 0v-7z"/>
                        </svg>
                    </a>
                </div>
            {% endfor %}
        {% endif %}
        <div class="my-5 p-3 borderOrange">
            <div class="d-flex align-items-end flex-column">
                <div class="d-flex">
                    <div class="col">
                        {% if totalItem > 1 %}
                            <div>{{ totalItem }} articles</div>
                        {% else %}
                            <div>{{ totalItem }} article</div>
                        {% endif %}
                    </div>
                    <div>
                        <div>{{ total |number_format(2, '.', ',') }} €</div>
                    </div>
                </div>
                <div class="d-flex">
                    <div class="col">
                        <div>Total (HT)</div>
                    </div>
                    <div>
                        <div><strong>{{ total |number_format(2, '.', ',') }} €</strong></div>
                    </div>
                </div>
                <div class="d-flex">
                    <div class="col">
                        <div>Total TTC</div>
                    </div>
                    <div>
                        <div><strong>{{ tva }} €</strong></div>
                    </div>
                </div>
            </div>
            <div class="d-flex align-items-center flex-column">
                <div><a href="" class="btn text-white btn-noir">Commander</a></div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script type="text/javascript" src="https://chir.ag/projects/ntc/ntc.js"></script>
    <script type="text/javascript" src="{{ asset('js/panier.js') }}"></script>
{% endblock %}
