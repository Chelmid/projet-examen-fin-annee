    <div class="container">
        <div class="row">
            <h1 class="col text-white fs mb-0">Fabricant d'objets tendances et écoresponsables</h1>
            <div class="col text-white text-center">01 02 03 04 05 du lundi au vendredi de 9h à 18h</div>
            <div class="row">
                <div class="col-auto text-white">Demander le catalogue</div>
                <div class="col-auto text-white">Contact</div>
            </div
        </div>
    </div>
</nav>
<header>
    <div class="container">
        <div class="row col-auto">
            <a href="{{ url('homeClient') }}"><h1 class="col-auto fs mb-0">logo</h1></a>
            <div class="col text-center">Objet Publicitaire et Green-Tech</div>
            <div class="row">
                <div class="col-auto text-white row">
                    <div><a href="{{ path('dashboardClient') }}">
                            <button>0</button>
                        </a></div>
                    <div><a href="{{ path('loginClient') }}">
                            <button>0</button>
                        </a></div>
                    <div><a href="{{ path('loginClient') }}">
                            <button>0</button>
                        </a></div>
                </div>
